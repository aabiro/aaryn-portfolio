<% if flash[:alert] %>
    <%= js add_gritter(flash[:alert], title: "Aaryn Biro's Portfolio", sticky: false) %>
  <% elsif flash[:error] %>
    <%= js add_gritter(flash[:error], title: "Aaryn Biro's Portfolio", sticky: false) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "Aaryn Biro's Portfolio", sticky: false) %>
<% end %>
